@model IEnumerable<New_Stock_Management.Models.Stock_Master>

@{
    ViewData["Title"] = "Index";
}

<h1>Stock Master</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total_Qty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Available_Qty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sell_Qty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Available_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sell_price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Company_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total_Qty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Available_Qty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sell_Qty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Available_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sell_price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Stock_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Stock_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Stock_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
